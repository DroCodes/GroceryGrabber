@model List<GroceryItem>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Grocery List</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">List</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @*Loop that will take DB items and put them in a table, when db is ready you can inject that data*@
            @foreach(var item in ViewBag.GroceriesList)
            {
                <tr>
                    <td>@item.UserID</td>
                    <td>@item.GroceryName</td>
                    <td><a class="btn btn-success" asp-controller="list" asp-action="Open">Open</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a id="edit" class="btn btn-primary" asp-controller="List" asp-action="Edit">Edit</a>
        <a id="delete" class="btn btn-danger" asp-controller="List" asp-action="Delete">Delete</a>
    </div>
</div>
