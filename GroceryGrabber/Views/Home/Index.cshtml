@model List<GroceryItem>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Grocery List</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.GroceriesList)
            {
                if (ViewBag.ID == item.UserID)
                {
                    <tr>
                        <td>@item.GroceryName</td>
                        <td>
                            <a class="btn btn-success" asp-route-id="@item.GroceryID" asp-controller="list" asp-action="Open">Open</a>
                            <a class="btn btn-danger" asp-route-id="@item.GroceryID" asp-controller="list" asp-action="Delete">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <a id="delete" class="btn btn-primary" asp-controller="List" asp-action="Create">Create List</a>
    </div>
</div>
